        local workspace=$(cat "$workspace_file" 2>/dev/null || echo "")
        if [[ -n "$workspace" ]]; then
            cecho "Workspace:" "$WHITE"
            echo "  $workspace"
            echo
        fi
    fi
    
    cecho "Getting Started:" "$GREEN"
    echo -e "  ${YELLOW}claudebox init${NC}                  Initialize this folder as a project"
